<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/BGXX"
    >
       <ImageView
        android:src="@drawable/lv1"
        android:layout_width="100dp"
        android:layout_height="150.0dp"
        android:id="@+id/ShipLv1"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="145dp"
        android:visibility="invisible"/>
        <ImageView
        android:src="@drawable/lv2"
        android:layout_width="100dp"
        android:layout_height="150.0dp"
        android:id="@+id/ShipLv2"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="145dp"
        android:visibility="invisible"/>
        <ImageView
        android:src="@drawable/lv3"
        android:layout_width="100dp"
        android:layout_height="150.0dp"
        android:id="@+id/ShipLv3"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="145dp"
        android:visibility="invisible"/>
    <ImageButton
        android:src="@drawable/leftbtn"
        android:layout_width="150dp"
        android:layout_height="125.0dp"
        android:id="@+id/Left"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="30dp"
        android:visibility="invisible"
        android:scaleType="fitCenter" />
    <ImageButton
        android:src="@drawable/rightbtn"
        android:layout_width="150dp"
        android:layout_height="125.0dp"
        android:id="@+id/Right"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="245dp"
        android:visibility="invisible"
        android:scaleType="fitCenter" />

    <TextView
        android:text="Money:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Money"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"/>
        <TextView
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoneyPoint"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        />
    <TextView
        android:text="100"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HPoint"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        />
        <TextView
        android:text="Hp:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Hp"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"/>
        <ImageView
        android:src="@drawable/enemy"
        android:layout_width="100.0dp"
        android:layout_height="100.5dp"
        android:id="@+id/Enyme1"
        android:layout_centerHorizontal="false"
        android:visibility="invisible"
        />
        <ImageView
        android:src="@drawable/enemy"
        android:layout_width="100.0dp"
        android:layout_height="100.5dp"
        android:id="@+id/Enyme2"
        android:layout_centerHorizontal="false"
        android:visibility="invisible"
        />
          <ImageView
        android:src="@drawable/enemy"
        android:layout_width="100.0dp"
        android:layout_height="100.5dp"
        android:id="@+id/Enyme3"
        android:layout_centerHorizontal="false"
        android:visibility="invisible"
        />
    <ImageView
        android:src="@drawable/mid"
        android:layout_width="150.0dp"
        android:layout_height="100.5dp"
        android:id="@+id/midbull"
        android:layout_centerHorizontal="false"
        android:visibility="invisible"
        android:layout_marginTop="310dp"
        />
    <ImageView
        android:src="@drawable/mid"
        android:layout_width="150.0dp"
        android:layout_height="100.5dp"
        android:id="@+id/lmidbull"
        android:layout_centerHorizontal="false"
        android:visibility="invisible"
        android:layout_marginTop="310dp"
        />
    <ImageView
        android:src="@drawable/mid"
        android:layout_width="150.0dp"
        android:layout_height="100.5dp"
        android:id="@+id/rmidbull"
        android:layout_centerHorizontal="false"
        android:visibility="invisible"
        android:layout_marginTop="310dp"
        />
</RelativeLayout>