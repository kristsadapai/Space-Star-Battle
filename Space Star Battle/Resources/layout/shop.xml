<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/BGXX"
    >
       <ImageView
        android:src="@drawable/lv1"
        android:layout_width="400dp"
        android:layout_height="400.0dp"
        android:id="@+id/ShipLv1"
        android:layout_marginTop="150dp"
        android:layout_marginRight="150dp"
        android:visibility="visible"/>
        <ImageView
        android:src="@drawable/lv2"
        android:layout_width="400dp"
        android:layout_height="400.0dp"
        android:id="@+id/ShipLv2"
        android:layout_marginTop="150dp"
        android:layout_marginRight="150dp"
        android:visibility="invisible"/>
        <ImageView
        android:src="@drawable/lv3"
       android:layout_width="400dp"
        android:layout_height="400.0dp"
        android:id="@+id/ShipLv3"
        android:layout_marginTop="150dp"
        android:layout_marginRight="150dp"
        android:visibility="invisible"/>
    <Button
        android:text="Upgrade"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/button1"
        android:textColor="#ff1a237e"
        android:backgroundTint="#fffb8c00"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="360dp"
 />
   
    <TextView
        android:text="Money:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Money"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"/>
        <TextView
        android:text="3"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/MoneyPoint"
        android:textSize="20sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        />
        <TextView
        android:text="Price"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textSize="35sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="150dp"
        android:visibility="visible"/>
       <TextView
        android:text="Lv1:Free"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price1"
        android:textSize="35sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="200dp"
        android:visibility="visible"/>
    <TextView
        android:text="Lv2:2000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price2"
        android:textSize="35sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="250dp"
        android:visibility="visible"/>

        <TextView
        android:text="Lv3:4000"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price3"
        android:textSize="35sp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="300dp"
        android:visibility="visible"/>

</RelativeLayout>