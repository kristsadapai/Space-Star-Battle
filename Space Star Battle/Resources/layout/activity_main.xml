
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/BGXX"
    >
    <ImageView
        android:src="@drawable/gameiconxx"
        android:layout_width="450.0dp"
        android:layout_height="450.5dp"
        android:id="@+id/Icon"
        android:layout_centerHorizontal="false"
        android:layout_marginBottom="430dp"
        android:visibility="visible"
        />
    <ImageButton
        android:src="@drawable/iconxla"
        android:layout_width="296.5dp"
        android:layout_height="85.5dp"
        android:id="@+id/PlayButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:visibility="visible"/>

    <ImageButton
        android:src="@drawable/shopxla"
        android:layout_width="296.5dp"
        android:layout_height="70.0dp"
        android:id="@+id/ShopButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:scaleType="center"
        android:visibility="visible"/>
</RelativeLayout>